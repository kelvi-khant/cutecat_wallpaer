<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    tools:context=".Fragment.ForYouFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/mainlayout">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:id="@+id/Linlayout">

         <TextView
             android:id="@+id/txt"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginStart="3dp"
             android:layout_marginEnd="3dp"
             android:fontFamily="@font/cutive"
             android:text="@string/for_you_txt"
             android:textColor="@color/black"
             android:textSize="20dp" />

         <ImageView
             android:background="@drawable/select_bg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginEnd="5dp"
             android:layout_marginBottom="5dp"
             android:id="@+id/refresh1"
             android:src="@drawable/fire"
             android:onClick="onRefreshButtonClick"/>
         <ImageView
             android:background="@drawable/select_bg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginEnd="5dp"
             android:layout_marginBottom="5dp"
             android:id="@+id/refresh2"
             android:visibility="gone"
             android:src="@drawable/fire_change"
             android:onClick="onRefreshButtonClick"/>
         <ImageView
             android:background="@drawable/select_bg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:id="@+id/fullScreen"
             android:src="@drawable/open_fullscreen" />
         <ImageView
             android:background="@drawable/select_bg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:id="@+id/listlayout"
             android:src="@drawable/calendar_view"/>
         <ImageView
             android:background="@drawable/select_bg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:id="@+id/linearlayout"
             android:visibility="gone"
             android:src="@drawable/fire_change"/>
         <ImageView
             android:background="@drawable/select_bg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/glidelayout"
             android:layout_margin="5dp"
             android:visibility="gone"
             android:src="@drawable/baseline_calendar_view"/>
         <ImageView
             android:background="@drawable/select_bg"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:id="@+id/selectlist"
             android:src="@drawable/filter_list" />
      </LinearLayout>
      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/Linlayout"
          android:id="@+id/CatWallpaper"/>

      <ProgressBar
          android:id="@+id/layoutPB"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_alignParentBottom="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="186dp"
          android:layout_marginTop="642dp"
          android:layout_marginEnd="177dp"
          android:layout_marginBottom="41dp"
          android:visibility="gone"/>
   </RelativeLayout>
   <ProgressBar
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:id="@+id/progressbar"
       android:visibility="gone"
       />
</RelativeLayout>